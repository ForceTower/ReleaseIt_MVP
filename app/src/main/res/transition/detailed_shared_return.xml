<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:duration="250"
    android:transitionOrdering="together">

    <transitionSet>
        <targets>
            <target android:targetId="@id/background" />
        </targets>
        <changeBounds android:interpolator="@android:interpolator/fast_out_slow_in" />

        <transition
            class="dev.forcetower.cubicrectangle.core.ui.transition.LiftOff"
            app:initialElevation="-4dp"
            app:finalElevation="-2dp" />
    </transitionSet>

    <transition
        class="dev.forcetower.cubicrectangle.core.ui.transition.DeparallaxChangeBounds"
        android:interpolator="@android:interpolator/fast_out_slow_in">
        <targets>
            <target android:targetId="@id/image" />
        </targets>
    </transition>

    <transition
        class="dev.forcetower.cubicrectangle.core.ui.transition.DarkenImage"
        app:initialRgbScale="1.0"
        app:finalRgbScale="0.85"
        android:interpolator="@android:interpolator/linear">
        <targets>
            <target android:targetId="@id/image" />
        </targets>
    </transition>

</transitionSet>