<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <transitionSet>
        <targets>
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@id/image" />
            <target android:excludeId="@id/back_wrapper" />
        </targets>
        <transition
            class="dev.forcetower.cubicrectangle.core.ui.transition.StaggeredDistanceSlide"
            app:spread="5"
            android:duration="350"
            android:interpolator="@android:interpolator/linear_out_slow_in" />
        <fade
            android:startDelay="250"
            android:duration="100"
            android:interpolator="@android:interpolator/linear" />
    </transitionSet>

    <transition
        class="dev.forcetower.cubicrectangle.core.ui.transition.BackgroundFade"
        android:startDelay="300"
        android:duration="150"
        android:interpolator="@android:interpolator/linear">
        <targets>
            <target android:targetId="@id/movie_title" />
            <target android:targetId="@id/movie_description" />
        </targets>
    </transition>

    <fade
        android:startDelay="300"
        android:duration="100"
        android:interpolator="@android:interpolator/linear">
        <targets>
            <target android:targetId="@id/back_wrapper" />
        </targets>
    </fade>

    <fade
        android:duration="350"
        android:interpolator="@android:interpolator/linear">
        <targets>
            <target android:targetId="@android:id/statusBarBackground" />
            <target android:targetId="@android:id/navigationBarBackground" />
        </targets>
    </fade>

</transitionSet>